<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/level2_neuer_weg"
    tools:context="com.example.lammel.lob.Mantra">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />

    <include
        android:id="@+id/footer"
        layout="@layout/footer"
         />

    <Button
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_weight="0.5"
            android:text="@string/neuerWeg_ButtonLoesung"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        android:layout_marginBottom="46dp"

        android:id="@+id/neuerWeg_ButtonLoesung"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"


        />
        <Button
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:text="@string/neuerWeg_ButtonZiel"
            android:id="@+id/neuerWeg_ButtonZiel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/footer"
            android:layout_marginBottom="46dp"
            android:layout_marginRight="8dp" />



    <TextView
        android:id="@+id/neuerWeg_Textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/neuerWeg_TextView"
        android:textSize="@dimen/activity_normalcontent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
