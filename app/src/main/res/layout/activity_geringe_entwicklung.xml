<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/geringeEntwicklung"
    android:background="@color/level5Background"
    tools:context="com.example.lammel.lob.GeringeEntwicklung">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />

    <include android:id="@+id/footer"
        layout="@layout/footer"
         />

    <Button
        android:id="@+id/zulevel2_Button"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_weight="0.5"
        android:text="@string/level2_Button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/weiterEnde_Button"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_weight="0.5"
        android:text="@string/wEnde_Button"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="95dp"
        app:layout_constraintBottom_toBottomOf="@+id/zulevel2_Button"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/geringeEntwicklung_TextView"
            android:textSize="@dimen/activity_normalcontent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </ScrollView>



</android.support.constraint.ConstraintLayout>
