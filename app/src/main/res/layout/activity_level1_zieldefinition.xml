<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/level1_zieldefinition"
    android:background="@color/level1Background"
    tools:context="com.example.lammel.lob.Level1Zieldefinition">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
         />

    <include
        android:id="@+id/footer"
        layout="@layout/footer"
         />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/zielFesthalten_TextView"
        android:textSize="@dimen/activity_normalcontent"
        android:id="@+id/zielFesthalten_textView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/zielFesthalten_EditView"
        android:textSize="@dimen/activity_normalcontent"
        android:id="@+id/zieldefinition_EditText"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/zielFesthalten_textView"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/zielFesthalten_Button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zielFesthalten_Button"
        android:id="@+id/zielFesthalten_Button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/footer"
        android:layout_marginBottom="46dp" />


</android.support.constraint.ConstraintLayout>
