<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ziel_verwahren"
    android:background="@color/level1Background"
    tools:context="com.example.lammel.lob.Level1ZielVerwahren">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
         />

    <include
        android:id="@+id/footer"
        layout="@layout/footer"
         />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/zielVerwahren_TextView"
        android:textSize="@dimen/activity_normalcontent"
        android:id="@+id/zielVerwahren_textView"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zielVerwahren_Button"
        android:id="@+id/zielVerwahren_Button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        android:layout_marginBottom="46dp" />
</android.support.constraint.ConstraintLayout>
