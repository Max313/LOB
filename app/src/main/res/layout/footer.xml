<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/toolbarBackground">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:id="@+id/back_Button" />

    <Button
        android:id="@+id/ziel_Button"

        android:background="@drawable/button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/back_Button"
        android:layout_marginLeft="24dp" />



        <ImageButton
            android:id="@+id/gluehbirneDurchsichtig_Button"
            android:background="@drawable/gluehbirnedunkeldurchsichtig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/ziel_Button"
            android:layout_marginLeft="16dp" />


    <ImageButton
        android:id="@+id/gluehbirneDunkel_Button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/gluehbirnedunkel"
        app:layout_constraintLeft_toRightOf="@+id/ziel_Button"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/gluehbirneLeuchtend_Button"

            android:background="@drawable/gluehbirne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/ziel_Button"
            android:layout_marginLeft="16dp" />

        <Button
            android:id="@+id/ressourcen_Button"

            android:background="@drawable/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintRight_toLeftOf="@+id/loesung_Button"
            android:layout_marginRight="70dp" />


    <ImageButton
        android:id="@+id/sonneGrau_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/sonnegrau"
        app:layout_constraintLeft_toRightOf="@+id/ressourcen_Button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/sonneLeer_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/sonneleer"
        app:layout_constraintLeft_toRightOf="@+id/ressourcen_Button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sonnevoll"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toRightOf="@+id/ressourcen_Button"
        android:layout_marginLeft="16dp"
        android:id="@+id/sonneLeuchtend_Button" />

        <Button
            android:id="@+id/loesung_Button"
            android:background="@drawable/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintRight_toLeftOf="@+id/forward_Button"
            android:layout_marginRight="24dp" />

    <ImageButton
        android:id="@+id/forward_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/forward"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>

    </RelativeLayout>
    </RelativeLayout>