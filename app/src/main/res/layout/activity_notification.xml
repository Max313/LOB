                android:id="@+id/notification_editText"
                android:layout_width="0dp"
                android:background="@color/colorTableHeaderText"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Eingabe"
                android:paddingLeft="@dimen/smallSpace"
                android:paddingRight="@dimen/smallSpace"
                app:layout_constraintTop_toBottomOf="@+id/hintergrundNotification5_View"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
