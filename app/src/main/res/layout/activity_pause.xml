<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pause1"
    tools:context="com.example.lammel.lob.Pause">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
         />

    <include
        android:id="@+id/footer"
        layout="@layout/footer"
         />

    <ScrollView
        android:id="@+id/scrollViewPause1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/startTimer1_Button">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/pause1_TextView"
            android:textSize="@dimen/activity_normalcontent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewPause1" />


    </ScrollView>


    <Button
        android:id="@+id/startTimer1_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer Starten"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        android:layout_marginBottom="46dp"
        />


</android.support.constraint.ConstraintLayout>
