<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/timer"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.lammel.lob.Timer">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />

    <include android:id="@+id/footer"
        layout="@layout/footer"
        />

    <TextView
        android:id="@+id/title2_TexView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTableHeaderText"
        android:textSize="@dimen/activity_questions"
        android:text="Restzeit"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <LinearLayout
        android:id="@+id/linearLayoutTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2_TexView">

        <TextView
            android:id="@+id/d_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/d_TextView"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/activity_normalcontent" />

        <TextView
            android:id="@+id/h_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/h_TextView"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/activity_normalcontent" />

        <TextView
            android:id="@+id/m_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/m_TextView"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/activity_normalcontent" />

        <TextView
            android:id="@+id/s_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/s_TextView"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/activity_normalcontent"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTime"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/dAnzeige_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="  "
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2"
            />

        <TextView
            android:id="@+id/fp_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text=":"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2"
            />

        <TextView
            android:id="@+id/hAnzeige_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"

            android:text="  "
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2"
            />

        <TextView
            android:id="@+id/sp_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text=":"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2"
            />

        <TextView
            android:id="@+id/mAnzeige_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"

            android:text="  "
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2"
             />
        <TextView
            android:id="@+id/tp_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text=":"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2"
            />


        <TextView
            android:id="@+id/sAnzeige_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="  "
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2"
             />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pauseweiss"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/Timer1Weiter_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weiter"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />









</android.support.constraint.ConstraintLayout>
