<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lammel.lob.Staerkeinsel">


    <TableLayout
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:id="@+id/tableLayout"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/intro_TextView">

        <TableRow>

            <TextView
                android:id="@+id/verhaltenTextView"
                android:layout_weight="0.33"
                android:background="@drawable/table_header_border_small"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/verhalten_TextView"
                android:textColor="@color/colorTableHeaderText"
                android:textSize="@dimen/activity_headerSmall" />


            <TextView
                android:id="@+id/komplimentTextView"
                android:layout_weight="0.33"
                android:background="@drawable/table_header_border_small"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/kompliment_TextView"
                android:textColor="@color/colorTableHeaderText"
                android:textSize="@dimen/activity_headerSmall" />


            <TextView
                android:id="@+id/ressourcenTextView"
                android:layout_weight="0.33"
                android:background="@drawable/table_header_border_small"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/ressourcen_TextView"
                android:textColor="@color/colorTableHeaderText"
                android:textSize="@dimen/activity_headerSmall" />
        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/valueEditText1"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd_small"
                android:text="@string/value1_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />

            <TextView
                android:id="@+id/valueEditText2"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd_small"
                android:text="@string/value2_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />

            <TextView
                android:id="@+id/valueEditText3"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd_small"
                android:text="@string/value3_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />

        </TableRow>



        <TableRow>

            <TextView
                android:id="@+id/valueEditText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even_small"
                android:hint="@string/value4_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />

            <TextView
                android:id="@+id/valueEditText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even_small"
                android:hint="@string/value5_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />

            <TextView
                android:id="@+id/valueEditText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even_small"
                android:hint="@string/value6_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/valueEditText7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd_small"
                android:hint="@string/value7_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />

            <TextView
                android:id="@+id/valueEditText8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd_small"
                android:hint="@string/value8_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />

            <TextView
                android:id="@+id/valueEditText9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd_small"
                android:hint="@string/value9_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/valueEditText10"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even_small"
                android:hint="@string/value10_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />

            <TextView

                android:id="@+id/valueEditText11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even_small"
                android:hint="@string/value11_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />

            <TextView
                android:id="@+id/valueEditText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even_small"
                android:hint="@string/value12_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontentSmall" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/weiterStaerkeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/weiter_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/intro_TextView"
        android:layout_width="340dp"
        android:layout_height="310dp"
        android:textSize="@dimen/acitivty_smallcontent"
        android:layout_marginTop="8dp"
        android:text="@string/intro_TextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
