<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lammel.lob.Staerkeinsel">


    <TableLayout
        android:layout_width="340dp"
        android:layout_height="310dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <TableRow>

            <TextView
                android:id="@+id/verhaltenTextView"
                android:layout_weight="0.33"
                android:background="@drawable/table_header_border"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/verhalten_TextView"
                android:textColor="@color/colorTableHeaderText"
                android:textSize="@dimen/activity_header" />


            <TextView
                android:id="@+id/komplimentTextView"
                android:layout_weight="0.33"
                android:background="@drawable/table_header_border"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/kompliment_TextView"
                android:textColor="@color/colorTableHeaderText"
                android:textSize="@dimen/activity_header" />


            <TextView
                android:id="@+id/ressourcenTextView"
                android:layout_weight="0.33"
                android:background="@drawable/table_header_border"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/ressourcen_TextView"
                android:textColor="@color/colorTableHeaderText"
                android:textSize="@dimen/activity_header" />
        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/valueEditText1"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd"
                android:text="@string/value1_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontent" />

            <TextView
                android:id="@+id/valueEditText2"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd"
                android:text="@string/value2_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontent" />

            <TextView
                android:id="@+id/valueEditText3"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd"
                android:text="@string/value3_TextView"
                android:gravity="center"
                android:textSize="@dimen/activity_tablecontent" />

        </TableRow>



        <TableRow>

            <EditText
                android:scrollbars="vertical"
                android:id="@+id/valueEditText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even"
                android:ems="10"
                android:hint="@string/value4_EditView"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/activity_tablecontent" />

            <EditText
                android:scrollbars="vertical"
                android:id="@+id/valueEditText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even"
                android:ems="10"
                android:hint="@string/value5_EditView"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/activity_tablecontent" />

            <EditText
                android:scrollbars="vertical"
                android:id="@+id/valueEditText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even"
                android:ems="10"
                android:hint="@string/value6_EditView"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/activity_tablecontent" />
        </TableRow>

        <TableRow>

            <EditText
                android:scrollbars="vertical"
                android:id="@+id/valueEditText7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd"
                android:ems="10"
                android:hint="@string/value7_EditView"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/activity_tablecontent" />

            <EditText
                android:scrollbars="vertical"
                android:id="@+id/valueEditText8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd"
                android:ems="10"
                android:hint="@string/value8_EditView"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/activity_tablecontent" />

            <EditText
                android:scrollbars="vertical"
                android:id="@+id/valueEditText9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_odd"
                android:ems="10"
                android:hint="@string/value9_EditView"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/activity_tablecontent" />
        </TableRow>

        <TableRow>

            <EditText
                android:scrollbars="vertical"

                android:inputType="textPersonName"
                android:id="@+id/valueEditText10"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even"
                android:ems="10"
                android:hint="@string/value10_EditView"
                android:textAlignment="center"
                android:textSize="@dimen/activity_tablecontent" />

            <EditText
                android:scrollbars="vertical"

                android:id="@+id/valueEditText11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even"
                android:ems="10"
                android:hint="@string/value11_EditView"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/activity_tablecontent" />

            <EditText
                android:scrollbars="vertical"

                android:id="@+id/valueEditText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/table_value_border_even"
                android:ems="10"
                android:hint="@string/value12_EditView"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="@dimen/activity_tablecontent" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/speichern_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
