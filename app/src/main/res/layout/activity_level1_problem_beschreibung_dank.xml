<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/problem_BeschreibungDank"
    tools:context="com.example.lammel.lob.Level1_ProblemBeschreibung">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />

    <include
        android:id="@+id/footer"
        layout="@layout/footer"
         />


    <Button
        android:id="@+id/problem_BeschreibungDank_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="8dp"
        android:text="@string/weiter_button"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/problem_beschreibungDank_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problem_beschreibungDank_Textview"
            android:textSize="@dimen/activity_normalcontent"
             />

    </ScrollView>




</android.support.constraint.ConstraintLayout>

