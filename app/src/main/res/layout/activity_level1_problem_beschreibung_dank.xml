<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level1_problem_beschreibung_dank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.lammel.lob.Level1ProblemBeschreibungDank"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problem_beschreibungDank_Textview"
            android:textSize="@dimen/activity_normalcontent"
            android:id="@+id/problem_beschreibungDank_textView"
            />
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:text="@string/weiter_button"
        android:id="@+id/problem_BeschreibungDank_Button"
        />


</LinearLayout>
