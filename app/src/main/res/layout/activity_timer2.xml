<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/timer2"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.lammel.lob.Timer2">

    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
         />

    <include android:id="@+id/footer"
        layout="@layout/footer"
        />

    <TextView
        android:id="@+id/title2_TexView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTableHeaderText"
        android:textSize="@dimen/activity_questions"
        android:text="Restzeit"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <LinearLayout
        android:id="@+id/linearLayoutTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2_TexView">

        <TextView
            android:id="@+id/d2_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/d_TextView"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/activity_normalcontent" />

        <TextView
            android:id="@+id/h2_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/h_TextView"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/activity_normalcontent" />

        <TextView
            android:id="@+id/m2_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/m_TextView"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/activity_normalcontent" />

        <TextView
            android:id="@+id/s2_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="@string/s_TextView"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/activity_normalcontent"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTime"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/d2Anzeige_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="00"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2" />

        <TextView
            android:id="@+id/fp2_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text=":"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2" />

        <TextView
            android:id="@+id/h2Anzeige_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"

            android:text="00"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2" />

        <TextView
            android:id="@+id/sp2_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text=":"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2" />

        <TextView
            android:id="@+id/m2Anzeige_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"

            android:text="00"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2" />

        <TextView
            android:id="@+id/tp2_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text=":"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2" />


        <TextView
            android:id="@+id/s2Anzeige_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="00"
            android:textColor="@color/colorTableHeaderText"
            android:textSize="@dimen/timer2" />

    </LinearLayout>


    <Button
        android:id="@+id/Timer2Weiter_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Weiter"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />






</android.support.constraint.ConstraintLayout>
