<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sonne2_xml"
    tools:context="com.example.lammel.lob.Sonne2">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <include
        android:id="@+id/footer"
        layout="@layout/footer"></include>


    <ImageView
        android:id="@+id/Sonne2_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sonnevollgross"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/sonne2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="65dp"
        android:text="@string/WWort2_TextView"
        android:textSize="@dimen/activity_suncontent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar" />

    <TextView
        android:id="@+id/Sonne2_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SonneF2_TextView"
        android:textSize="@dimen/activity_normalcontent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Sonne2_imageView" />

    <View
        android:id="@+id/hintergrund3_View"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintBottom_toTopOf="@+id/view3_View" />

    <TextView
        android:id="@+id/timer2_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:textColor="@color/colorTableHeaderText"
        android:textSize="@dimen/timer"
        app:layout_constraintBottom_toBottomOf="@+id/hintergrund3_View"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hintergrund3_View" />


    <ImageView
        android:id="@+id/microphone2_Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/aufnahmeon"
        app:layout_constraintBottom_toBottomOf="@+id/hintergrund3_View"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hintergrund3_View" />

    <ImageView
        android:id="@+id/microphone2_Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/aufnahmeout"
        app:layout_constraintBottom_toTopOf="@+id/view3_View"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hintergrund3_View" />

    <Button
        android:id="@+id/fertig2_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Fertig"
        android:textColor="@color/colorTableHeaderText"
        app:layout_constraintBottom_toBottomOf="@+id/hintergrund3_View"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hintergrund3_View" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        android:layout_marginBottom="190dp"
        android:id="@+id/view3_View" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/footer"
        android:layout_marginBottom="120dp"
        android:id="@+id/view3_view2" />


    <ImageView
        android:id="@+id/pause2_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pauseneu"
        app:layout_constraintBottom_toTopOf="@+id/view3_view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3_View" />

    <ImageView
        android:id="@+id/play2_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/playneu"
        app:layout_constraintBottom_toTopOf="@+id/view3_view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3_View" />

    <ImageView
        android:id="@+id/playhell2_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/playhell"
        app:layout_constraintBottom_toTopOf="@+id/view3_view2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3_View" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/start3_TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view3_View"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/view3_view2"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/start3_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="0:00"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view3_View"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/view3_view2"
        android:layout_marginStart="80dp" />

    <TextView
        android:id="@+id/end2_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0:00"
        app:layout_constraintBottom_toTopOf="@+id/view3_view2"
        app:layout_constraintLeft_toRightOf="@+id/progressBar3"
        app:layout_constraintTop_toBottomOf="@+id/view3_View" />




    <Button
        android:id="@+id/Weiter2_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Weiter2_Button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="46dp" />

    <Button
        android:id="@+id/zurUebersicht2_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ZurUebersicht2_Button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="46dp" />



</android.support.constraint.ConstraintLayout>
